import os
import sys

from drenv import kubectl
from drenv import cache


def deploy(cluster):
    print("Deploying rook ceph operator")
    path = cache.path("addons/rook-operator.yaml")
    cache.fetch(".", path)
    kubectl.apply("--filename", path, context=cluster)


def wait(cluster):
    print("Waiting until rook ceph operator is rolled out")
    kubectl.rollout(
        "status",
        "deploy/rook-ceph-operator",
        "--namespace=rook-ceph",
        # We had random timeout with 300s.
        "--timeout=600s",
        context=cluster,
    )

    print("Waiting until rook ceph operator is ready")
    kubectl.wait(
        "pod",
        "--for=jsonpath={.status.phase}=Running",
        "--namespace=rook-ceph",
        "--selector=app=rook-ceph-operator",
        "--timeout=300s",
        context=cluster,
    )


if len(sys.argv) != 2:
    print(f"Usage: {sys.argv[0]} cluster")
    sys.exit(1)

os.chdir(os.path.dirname(__file__))
cluster = sys.argv[1]

deploy(cluster)
wait(cluster)
