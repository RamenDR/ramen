import os
import sys

from drenv import kubectl
from drenv import cache

NAMESPACE = "cdi"


def deploy(cluster):
    print("Deploying cdi operator")
    path = cache.get("operator", "addons/cdi-operator-1.59.0.yaml")
    kubectl.apply("--filename", path, context=cluster)

    print("Waiting until cdi-operator is rolled out")
    kubectl.rollout(
        "status",
        "deploy/cdi-operator",
        f"--namespace={NAMESPACE}",
        "--timeout=300s",
        context=cluster,
    )

    print("Deploying cdi cr")
    path = cache.get("cr", "addons/cdi-cr-1.59.0.yaml")
    kubectl.apply("--filename", path, context=cluster)


def wait(cluster):
    print("Waiting until cdi cr is available")
    kubectl.wait(
        "cdi.cdi.kubevirt.io/cdi",
        "--for=condition=available",
        f"--namespace={NAMESPACE}",
        "--timeout=300s",
        context=cluster,
    )
    print("Waiting until cdi cr finished progressing")
    kubectl.wait(
        "cdi.cdi.kubevirt.io/cdi",
        "--for=condition=progressing=False",
        f"--namespace={NAMESPACE}",
        "--timeout=300s",
        context=cluster,
    )


if len(sys.argv) != 2:
    print(f"Usage: {sys.argv[0]} cluster")
    sys.exit(1)

os.chdir(os.path.dirname(__file__))
cluster = sys.argv[1]

deploy(cluster)
wait(cluster)
