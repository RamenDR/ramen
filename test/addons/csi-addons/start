import os
import sys

import drenv
from drenv import kubectl

# We don't have a release with lastSyncTime, and main is currently broken (no
# quay.io image matching latest code).
VERSION = "ee9403c55c3aee9da7b25785b87e370c4095d881"
BASE_URL = f"https://raw.githubusercontent.com/csi-addons/kubernetes-csi-addons/{VERSION}/deploy/controller"


def deploy(cluster):
    print("Deploying csi addon for volume replication")
    with drenv.kustomization(
        "kustomization.yaml",
        base_url=BASE_URL,
    ) as kustomization:
        kubectl.apply("--kustomize", kustomization, context=cluster)


def wait(cluster):
    print("Waiting until csi-addons-controller-manager is rolled out")
    kubectl.rollout(
        "status",
        "deploy/csi-addons-controller-manager",
        "--namespace=csi-addons-system",
        "--timeout=300s",
        context=cluster,
    )


if len(sys.argv) != 2:
    print(f"Usage: {sys.argv[0]} cluster")
    sys.exit(1)

os.chdir(os.path.dirname(__file__))
cluster = sys.argv[1]

deploy(cluster)
wait(cluster)
