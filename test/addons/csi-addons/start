import os
import sys

from drenv import kubectl
from drenv import cache


def deploy(cluster):
    print("Deploying csi addon for volume replication")
    path = cache.path("addons/csi-addons.yaml")
    cache.fetch(".", path)
    kubectl.apply("--filename", path, context=cluster)


def wait(cluster):
    print("Waiting until csi-addons-controller-manager is rolled out")
    kubectl.rollout(
        "status",
        "deploy/csi-addons-controller-manager",
        "--namespace=csi-addons-system",
        "--timeout=300s",
        context=cluster,
    )


if len(sys.argv) != 2:
    print(f"Usage: {sys.argv[0]} cluster")
    sys.exit(1)

os.chdir(os.path.dirname(__file__))
cluster = sys.argv[1]

deploy(cluster)
wait(cluster)
