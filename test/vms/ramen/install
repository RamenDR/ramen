#!/bin/sh -e

# SPDX-FileCopyrightText: The RamenDR authors
# SPDX-License-Identifier: Apache-2.0

chdir $(dirname $0)
cp usr/bin/ramen /usr/bin
cp etc/init.d/ramen /etc/init.d
cp etc/init.d/increase-root-disk-size /etc/init.d
ln -sn ../init.d/increase-root-filesystem-size /etc/rc3.d/S97-increase-root-filesystem-size
ln -sn ../init.d/ramen /etc/rc3.d/S00-ramen
ln -sn ../init.d/ramen /etc/rc3.d/K00-ramen
